<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>dtoToProto</RootNamespace>
    <PackAsTool>true</PackAsTool>
    
    <ToolCommandName>dto2proto</ToolCommandName>
    <Version>1.0.1</Version>
    <PackageId>DtoToProto</PackageId>
    <Authors>dreadew</Authors>
    <Description>Converts C# DTO files to Protobuf files</Description>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <RepositoryUrl>https://github.com/dreadew/DtoToProto</RepositoryUrl>

    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.12.0" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
    <PackageReference Include="System.Text.Json" Version="9.0.0" />
  </ItemGroup>

</Project>
